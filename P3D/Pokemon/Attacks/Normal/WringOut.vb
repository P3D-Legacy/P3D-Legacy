        End Sub

        Public Overrides Function GetBasePower(own As Boolean, BattleScreen As BattleScreen) As Integer
            Dim p As Pokemon = BattleScreen.OppPokemon
            If own = False Then
                p = BattleScreen.OwnPokemon
            End If

            Return CInt(120 * (p.HP / p.MaxHP))

        End Function

